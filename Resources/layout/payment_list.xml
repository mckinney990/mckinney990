<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
    <TextView
        android:text="Payment Methods"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/label_paymentn_screen_title"
        android:gravity="center"
        android:layout_weight="0"
        android:textSize="32dp"
        android:layout_marginBottom="20dp" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_payment_methods"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/payment_method_actions"
        android:layout_weight="0"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:text="Add"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_add_pmethod" />
        <Button
            android:text="Remove"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_remove_pmethod" />
        <Button
            android:text="Exit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_exit_payment_methods" />
    </LinearLayout>
</LinearLayout>

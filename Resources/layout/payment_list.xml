<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
    <TextView
        android:text="Payment Methods"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/label_paymentn_screen_title"
        android:gravity="center"
        android:layout_weight="0"
        android:textSize="32dp"
        android:layout_marginBottom="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Payment Method"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/spPaymentMethods"/>
        <Button
            android:text="Refresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_pm_refresh" />
    </LinearLayout>
    <TextView
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblPaymentMethodDescription" />
    <TextView
        android:text="Description Here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPaymentMethodDescription"
        android:textSize="24sp" />
    <TextView
        android:text="Name on Card:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblNameOnCard" />
    <TextView
        android:text="John Smith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNameOnCard"
        android:textSize="24sp" />
    <TextView
        android:text="Number:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblCardNumber" />
    <TextView
        android:text="0000-0000-0000-0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCardNumber"
        android:textSize="24sp" />
    <TextView
        android:text="Expiry Date:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblExpiry" />
    <TextView
        android:text="01/1900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtExpiry"
        android:textSize="24sp" />
    <TextView
        android:text="Security Number:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblSecurityCode" />
    <TextView
        android:text="123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSecurityCode"
        android:textSize="24sp" />
    <TextView
        android:text="ZIP Code:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblZipCode" />
    <TextView
        android:text="12345"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtZipCode"
        android:textSize="24sp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/payment_method_actions"
        android:layout_weight="0"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:text="Add"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_add_pmethod" />
        <Button
            android:text="Edit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_edit_pmethod" />
        <Button
            android:text="Exit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_exit_payment_methods" />
    </LinearLayout>
</LinearLayout>

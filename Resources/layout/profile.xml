<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
    <TextView
        android:text="Your Profile"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/lblProfileTitle"
        android:gravity="center"
        android:layout_marginBottom="10dp" />
    <TextView
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblProfileName" />
    <TextView
        android:text="John Smith"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtProfileName"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <TextView
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblProfileUsername" />
    <TextView
        android:text="jsmith451"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtProfileUsername"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <TextView
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblProfilEmail" />
    <TextView
        android:text="jsmith@example.com"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtProfileEmail"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <TextView
        android:text="Phone Number"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblProfilePhoneNumber" />
    <TextView
        android:text="(123) 456-7890"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtProfilePhoneNumber"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <TextView
        android:text="Pin Unlock"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />
    <CheckBox
        android:text="Disabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:gravity="center">
        <Button
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/btnEditProfile"/>
        <Button
            android:text="Change\nPassword"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/btnChangePassword"/>
        <Button
            android:text="Show QR"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/btnShowProfileQR"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <Button
            android:text="Payment\nMethods"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/btnPaymentMethods"/>
        <Button
            android:text="Saved\nTransactions"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/btnSavedTransactions"/>
        <Button
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/btnExitProfile"/>
    </LinearLayout>

</LinearLayout>

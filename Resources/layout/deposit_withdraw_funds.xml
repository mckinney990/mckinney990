
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:id="@+id/ll_dw">
    <TextView
        android:text="Deposit or Withdraw Funds"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/lbl_dw_title"
        android:gravity="center"
        android:layout_marginBottom="15.0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_dw_action_container"
        android:gravity="center"
        android:layout_marginBottom="15.0dp">
        <TextView
            android:text="Change Action: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lbl_dw_change_type"
            android:gravity="center" />
        <Button
            android:text="Deposit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_dw_change_type" />
    </LinearLayout>
    <TextView
        android:text="Payment Method:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_dw_payment_method"
        android:layout_marginBottom="10.0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_dw_payment_method_container">
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sp_dw_payment_method"/>
        <Button
            android:text="Refresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_dw_refresh_payment_methods" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_dw_balance_container">
        <TextView
            android:text="Current Balance:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lbl_dw_current_balance"
            android:gravity="center" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_wd_current_balance_conainer"
            android:gravity="center">
            <EditText
                android:inputType="numberDecimal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dw_current_balance"
                android:textSize="12sp"
                android:enabled="false" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_dw_amount_moved_container">
        <TextView
            android:text="Amount Moved: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lbl_dw_amount_moved"
            android:gravity="center" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_dw_amount_moved_lbl_container"
            android:gravity="center">
            <EditText
                android:inputType="numberDecimal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dw_amount_moved"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_dw_buttons_container"
        android:gravity="center">
        <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_dw_send" />
        <Button
            android:text="cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_dw_cancel" />
    </LinearLayout>

</LinearLayout>
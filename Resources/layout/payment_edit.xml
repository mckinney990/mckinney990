<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:id="@+id/ll_payment_edit">
    <TextView
        android:text="Edit Payment Method"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/lbl_payment_edit"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="28dp" />
    <TextView
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_payment_edit_description" />
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_payment_edit_description"
        android:textSize="12dp" />
    <TextView
        android:text="Name on Card:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_payment_edit_name_on_card" />
    <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_payment_edit_name_on_card"
        android:textSize="12dp" />
    <TextView
        android:text="Number:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_payment_edit_card_number" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_payment_edit_card_number"
        android:textSize="12dp" />
    <TextView
        android:text="Expiry Date:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_payment_edit_expiry_date" />
    <EditText
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_payment_edit_expiry_date"
        android:textSize="12dp" />
    <TextView
        android:text="Security Number:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_payment_edit_security_number" />
    <EditText
        android:inputType="numberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_payment_edit_security_number"
        android:textSize="12dp" />
    <TextView
        android:text="ZIP Code:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_payment_edit_zip_code" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_payment_edit_zip_code"
        android:textSize="12dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/ll_payment_edit_buttons"
        android:gravity="center">
        <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_payment_edit_save" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Remove"
            android:id="@+id/btn_payment_edit_remove"/>
        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_payment_edit_cancel" />
    </LinearLayout>

</LinearLayout>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    android:gravity="center">
    <TextView
        android:text="Mulligan Wallet"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:id="@+id/textView2" />
    <FrameLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout1"
        app:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="20.0dp"
        android:layout_marginBottom="15.0dp">
        <TextView
            android:text="Balance:\n$0.00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="200dp"
            android:id="@+id/textView1"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_height="160dp"
            android:textSize="40dp"
            android:background="@color/material_blue_grey_950"
            android:textColor="@android:color/background_light" />
    </FrameLayout>
    <Button
        android:text="Deposit\nor\nWithdraw"
        android:layout_width="140dp"
        android:layout_height="wrap_content"/>
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/listView1"
        android:layout_marginLeft="50.0dp"
        android:layout_marginRight="50.0dp"
        android:background="@color/material_blue_grey_800"
        android:layout_marginTop="15.0dp"
        android:layout_marginBottom="15.0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/linearLayout2"
        android:gravity="center"
        android:layout_marginBottom="5.0dp">
        <Button
            android:text="Make\nTransaction"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/button1"
            android:textSize="12dp" />
        <Button
            android:text="Notifications"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:textSize="12dp" />
        <Button
            android:text="QR Reader"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:textSize="12dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/linearLayout4"
        android:layout_marginBottom="40.0dp"
        android:gravity="center"
        android:layout_marginTop="5.0dp">
        <Button
            android:text="Profile"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:textSize="12dp" />
        <Button
            android:text="History"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:textSize="12dp" />
        <Button
            android:text="Friends"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/button1"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>